@using Microsoft.AspNet.Identity
@using Bug_Tracker.Helpers

@model Bug_Tracker.ViewModel.ProjectListViewModel


@{
    ViewBag.Title = "ListView";
}
<style>
    #tbutt {
        color: #343a40;
    }

    #tablecard {
        padding-top: 20px;
    }
</style>

<div class="container">
    <div class="col-12" id="tablecard">
        <div class="card card-dark">
            <div class="card-header">
                <h4 class="card-title m-0">View Projects</h4>
            </div>
            <div class="card-body">
                <a class="btn btn-secondary btn-sm" id="btns" onclick="history.back(-1)">
                    <i class="fas fa-arrow-alt-circle-left">
                    </i>
                    Go Back
                </a>
                <br />
                <br />

                <table class="table datatable table-bordered table-hover" id="lvtable">
                    <thead>
                        <tr>
                            <th>
                                Project Name
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Project Manager
                            </th>
                            <th>
                                Created
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Projects)
                        {
                            <tr>
                                <td>
                                    @item.Project.Name
                                </td>
                                <td>
                                    @item.Project.Description
                                </td>
                                <td>
                                    @item.PMName
                                </td>
                                <td>
                                    @item.Project.Created
                                </td>
                                <td>
                                    <a class="btn btn-secondary btn-sm" href="@Url.Action("Details", "Projects", new { id = item.Project.Id })">
                                        <i class="fas fa-folder">
                                        </i>
                                        View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>

    </script>
}



