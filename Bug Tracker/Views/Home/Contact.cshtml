@using (Html.BeginForm())
{@Html.AntiForgeryToken() <h4>Send me a message.</h4>
<hr />
@Html.ValidationSummary("", new { @class = "text-danger" }) 
    <div class="form-group">
    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Full Name" })
        @Html.ValidationMessageFor(m => m.From)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.From, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.From, new { @class = "form-control", placeholder = "Email Address" })
        @Html.ValidationMessageFor(m => m.From)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Subject" })
        @Html.ValidationMessageFor(m => m.Subject)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Body, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Body, new { @class = "form-control", placeholder = "Enter Message Here" })
        @Html.ValidationMessageFor(m => m.Body)
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" class="btn btn-secondary" value="Send" />
    </div>
</div>}

